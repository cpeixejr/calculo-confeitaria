<div class="ingredient">
  <%= link_to ingredient.name, ingredient_path(ingredient) %>
  <p><%= ingredient.price %></p>
  <div class="ingredient__actions">
    <%= button_to "Delete",
                  ingredient_path(ingredient),
                  method: :delete,
                  class: "btn btn--light" %>
    <%= link_to "Edit",
                edit_ingredient_path(ingredient),
                class: "btn btn--light" %>
  </div>
</div>